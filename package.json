{
  "name": "mcp-todo-server",
  "version": "1.0.0",
  "description": "MCP server for todo list management",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:auto": "MCP_AUTO_START_POCKETBASE=true node dist/index.js",
    "prepare": "npm run build",
    "pocketbase": "./pocketbase/pocketbase serve",
    "setup": "npm run build && npm run pocketbase"
  },
  "keywords": [
    "mcp",
    "todo",
    "server"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "pocketbase": "^0.26.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
